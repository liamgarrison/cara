<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.6)), url(<%= image_path 'home_camper.jpg' %>);">
  <div class="container">
    <h1>Book unique campers and caravans for your next holiday</h1>
      <form class="mt-5" action="/vehicles">
        <div class="row">
          <div class="col-6">
            <input class="form-control" type="text" name="location" placeholder="Enter a location..." id="vehicle_address">
          </div>
          <div class="col-2">
            <input class="form-control btn btn-primary" type="submit" value="Search">
          </div>
          <input type="hidden" name="distance" id="distance" value="50">
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container my-5">
  <h1 class="mb-5">Featured Campervans</h1>
  <div class="row">
    <% @vehicles.each do |vehicle| %>
      <div class="col-4">
        <%= link_to vehicle_path(vehicle), class: 'text-decoration-none' do %>
          <div class="vehicle-home-card">
            <%= cl_image_tag vehicle.photo, crop: :fill %>
            <div class="vehicle-home-card-content p-3">
              <p class="vehicle-home-card-title"><%= vehicle.name %></p>
              <p class="vehicle-home-card-subheading"><%= vehicle.berths %> berth <%= vehicle.category %></p>
              <p class="vehicle-home-card-address"><i class="fas fa-map-marker-alt"></i> <%= vehicle[:distance] ? vehicle[:distance].round : 0 %> miles away</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

