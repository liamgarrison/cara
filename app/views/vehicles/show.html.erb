<div class="container">
  <div class="card-trip">
    <%= cl_image_tag @vehicle.photo, crop: :fill %>
    <div class="card-trip-infos">
      <div>
        <h1><%= @vehicle.name %></h1>
        <p>Address: <%= @vehicle.address %></p>
        <p>Berth: (<%= @vehicle.berths %>)</p>
      </div>
      <h2 class="card-trip-pricing"><%= @vehicle.price_per_night %></h2>
      <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
      <p>Category: <%= @vehicle.category %></p>
      <p>Description: <%= @vehicle.description %></p>
    </div>
  </div>
    <div class="container">
      <%= link_to "Back", vehicles_path, class: "btn btn-primary" %>
    </div>
    <%= link_to "Book Now", new_vehicle_booking_path(@vehicle) %>

</div>


