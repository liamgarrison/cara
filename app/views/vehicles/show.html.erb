<div class="container border-radius">
  <div class="top-image" style="background-image: url(<%= cl_image_path @vehicle.photo, crop: :mpad %>)">
  </div>
  <div class="content-container d-flex justify-content-between">
    <div class="details-container w-50">
      <div class="title-container d-flex justify-content-between">
        <h1><%= @vehicle.name %></h1>
          <%= cl_image_tag @vehicle.owner.photo, crop: :fill, height: 80, width: 80 %>
      </div>
      <div class="vehicle-fields">
        <p><i class="fas fa-map-marker-alt"></i> <%= @vehicle.address %></p>
        <div class="d-flex">
          <p><i class="fas fa-shuttle-van"></i> <%= @vehicle.category %> </p>
          <p> <i class="ml-3 fas fa-bed"></i> <%= @vehicle.berths %></p>
        </div>
      </div>
      <div class="description">
        <!-- <p><%= @vehicle.description %></p> -->
      </div>
      <h2 class="mb-5">Location</h2>
      <div
        id="map"
        style="width: 100%;
        height: 500px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="booking-container">
      <div class="box-with-shadow border-radius sticky-top">
          <div class="price d-flex">
            <h4><strong>Â£<%= @vehicle.price_per_night %></strong></h4>
            <p> per night</p>
          </div>
          <div>
            <form class="popover-datepicker" action="<%=new_vehicle_booking_path(@vehicle)%>" >
              <div class="row">
                <div class="col-6"><input class="w-100 form-control" type="text" name="start_date" id="start_date_show"></div>
                <div class="col-6"><input class="w-100 form-control" type="text" name="end_date" id="end_date_show"></div>
              </div>
              <input class="form-control btn btn-primary mt-3" type="submit" value="Book Now">
            </form>
          </div>

        </div>
      </div>
  </div>
</div>

<div class="container">
    <h2><%= @vehicle.reviews.count %> Reviews <% @vehicle.average_rating.times do  %>
    <i class="fas fa-star star-color"></i>
  <% end %>
  </h2>
    <% @vehicle.reviews.each do |review| %>
  <div class="card-product review-card my-3">
    <%= cl_image_tag review.user.photo, height: 300, width: 400, crop: :thumb, class: "avatar m-3" %>
    <strong><%= review.user.first_name %></strong>
    <%= ('<i class="fas fa-star star-color"></i>' * review.rating).html_safe %>
    <div class="card-product-infos p-3">
      <%= review.comment %>
    </div>
  </div>
    <% end %>
</div>









