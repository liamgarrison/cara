  <%= render('search_filters') %>

    <div class="main d-flex sticky-top">
      <div class="cards-wrapper w-50">  <% @vehicles.each do |vehicle| %>
        <div class="card mb-3">
          <%= cl_image_tag vehicle.photo, height: 300 %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to vehicle.name, vehicle_path(vehicle) %></h5>

            <p class="card-text"><%= vehicle.address %></p>
            <!-- <a href="#" class="btn btn-primary">Discover more</a> -->
            <%= link_to "Discover more", vehicle_path(vehicle), class: "btn btn-primary"%>
          </div>
        </div>
            <% end %>
          </div>

        <div class="map-wrapper w-50 vh-10">
      <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
        </div>
    </div>

