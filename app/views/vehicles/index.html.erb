<div class="container text-center mt-3 mb-3">
  <h1 class="mt-3 mb-3">Vehicles</h1>
  <div class="row">
          <% @vehicles.each do |vehicle| %>
    <div class="col-4">
      <div class="card mb-3">
        <%= cl_image_tag vehicle.photo, height: 300 %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to vehicle.name, vehicle_path(vehicle) %></h5>

          <p class="card-text"><%= vehicle.address %></p>
          <!-- <a href="#" class="btn btn-primary">Discover more</a> -->
          <%= link_to "Discover more", vehicle_path(vehicle), class: "btn btn-primary"%>
        </div>
      </div>
    </div>
          <% end %>
  </div>
</div>

